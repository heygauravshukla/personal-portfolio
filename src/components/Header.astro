---
import { Image } from 'astro:assets'

import AvatarImage from '../assets/gaurav-shukla.webp'
import BarsIcon from '../assets/icons/bars-solid.svg'
import XMarkIcon from '../assets/icons/xmark-solid.svg'

const links: { label: string; href: string }[] = [
  { label: 'Home', href: '/' },
  { label: 'Projects', href: '/projects' },
  { label: 'Contact', href: 'mailto:heygauravshukla@gmail.com' },
]
---

<header class="content-grid">
  <nav class="space-between">
    <a class="skip-to-main" href="#main-content">Skip to main content</a>
    <a class="logo" href="/">
      <Image src={AvatarImage} alt="Gaurav Shukla" width="24" height="24" />
    </a>
    <button class="menu-opener" aria-controls="primary-nav">
      <span class="visually-hidden">Open Menu</span>
      <BarsIcon class="icon" />
    </button>
    <div id="primary-nav" aria-expanded="false">
      <button class="menu-closer" aria-controls="primary-nav">
        <span class="visually-hidden">Close Menu</span>
        <XMarkIcon class="icon" />
      </button>
      <menu>
        {
          links.map((link) => (
            <li>
              <a href={link.href}>{link.label}</a>
            </li>
          ))
        }
      </menu>
    </div>
  </nav>
</header>

<script>
  const nav = document.querySelector('#primary-nav')
  const navTogglers = document.querySelectorAll('[aria-controls="primary-nav"]')

  navTogglers.forEach((navToggler) => {
    navToggler.addEventListener('click', () => {
      const isOpen = nav?.getAttribute('aria-expanded') === 'true'
      nav?.setAttribute('aria-expanded', String(!isOpen))
      document.body.style.overflow = isOpen ? 'auto' : 'hidden'
    })
  })
</script>

<style>
  header {
    container-type: inline-size;

    position: sticky;
    top: 0;
    z-index: var(--layer-5);

    background-color: hsl(from var(--surface-1) h s l / 0.5);
    backdrop-filter: blur(8px);
    padding-block: var(--size-3);
    border-bottom: var(--border-size-1) solid var(--surface-3);
  }

  nav {
    align-items: center;
  }

  .skip-to-main {
    position: absolute;

    background-color: var(--brand);
    color: var(--surface-1);
    padding: 1em 3em;

    font-weight: var(--font-weight-7);

    translate: 0 -200%;
    transition: translate 250ms;

    &:focus-visible {
      translate: 0 0;
    }
  }

  .logo img {
    width: var(--size-7);
    height: auto;
    border-radius: var(--radius-round);
  }

  .menu-opener,
  .menu-closer {
    display: none;
  }

  menu {
    list-style: none;
    padding: 0;
    margin: 0;

    display: flex;
    align-items: center;
    gap: var(--size-8);
  }

  menu a {
    text-decoration: none;
    color: currentColor;

    font-family: var(--font-industrial);
    text-transform: uppercase;

    transition: color 250ms;

    &:hover {
      color: var(--brand);
    }
  }

  @container (max-width: 640px) {
    .menu-opener,
    .menu-closer {
      display: block;
      background-color: transparent;
      padding: 0;
      border: 0;
    }

    #primary-nav {
      translate: 0 -200%;
      visibility: hidden;

      display: grid;
      grid-template-rows: auto 1fr;

      position: fixed;
      inset: 0;
      z-index: var(--layer-5);

      height: 100dvh;
      background-color: var(--surface-1);
      padding: var(--size-4) var(--size-3);

      transition: all 300ms;
    }

    #primary-nav[aria-expanded='true'] {
      translate: 0 0;
      visibility: visible;
    }

    .menu-closer {
      justify-self: end;
    }

    menu {
      display: grid;
      gap: var(--size-5);
      place-content: center;
    }

    menu li {
      text-align: center;
    }

    menu a {
      font-size: var(--font-size-3);
    }
  }
</style>
