---
import AvatarImage from '../assets/gaurav-shukla.webp'

import BarsIcon from '../assets/icons/bars-solid.svg'
import XMarkIcon from '../assets/icons/xmark-solid.svg'

export interface link {
  name: string
  url: string
}

export const links: link[] = [
  { name: 'Home', url: '/' },
  { name: 'Skills', url: '/#skills' },
  { name: 'Projects', url: '/projects' },
  { name: 'Contact', url: 'mailto:heygauravshukla@gmail.com' },
]
---

<script>
  const navTogglers = document.querySelectorAll('[aria-controls="primary-nav"]')
  const nav = document.querySelector('#primary-nav')

  navTogglers.forEach((navToggler) => {
    navToggler.addEventListener('click', () => {
      if (window.innerWidth < 640) {
        const isActive = nav?.classList.toggle('active')

        document.body.classList.toggle('stop-scrolling')

        navTogglers.forEach((toggler) => {
          toggler.setAttribute('aria-expanded', isActive ? 'true' : 'false')
        })
      }
    })
  })
</script>

<header>
  <div class="wrapper">
    <a href="#main-content" class="skip-to-main">Skip to main content</a>

    <a href="/" class="logo">
      <img src={AvatarImage.src} alt="Gaurav Shukla" width="24" height="24" />
    </a>

    <button class="menu-opener" aria-controls="primary-nav">
      <span class="visually-hidden">Open Menu</span>
      <BarsIcon class="icon" />
    </button>

    <div class="overlay" aria-controls="primary-nav"></div>

    <nav id="primary-nav">
      <button class="menu-closer" aria-controls="primary-nav">
        <span class="visually-hidden">Close Menu</span>
        <XMarkIcon class="icon" />
      </button>

      <ul class="menu">
        {
          links.map((link) => (
            <li>
              <a href={link.url} aria-controls="primary-nav">
                {link.name}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>

<style>
  header {
    container-type: inline-size;

    position: sticky;
    top: 0;
    z-index: var(--layer-5);

    background-color: hsl(from var(--surface-1) h s l / 0.5);
    backdrop-filter: blur(8px);
    padding-block: var(--size-fluid-2);
    border-bottom: var(--border-size-1) solid var(--surface-3);
  }

  .wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .skip-to-main {
    position: absolute;
    translate: -200%;

    &:hover,
    &:focus-visible {
      translate: 0;
      background-color: var(--brand);
      color: var(--surface-1);
      padding: 1em 3em;
      font-weight: var(--font-weight-7);
    }
  }

  .logo img {
    width: var(--size-7);
    height: auto;
    border-radius: var(--radius-round);
  }

  .menu-opener,
  .overlay,
  .menu-closer {
    display: none;
  }

  .menu {
    counter-reset: link-count;
    list-style: none;
    padding: 0;
    margin: 0;

    display: flex;
    align-items: center;
    gap: var(--size-7);
  }

  .menu li {
    counter-increment: link-count;
  }

  .menu li a {
    text-decoration: none;
    color: currentColor;

    display: flex;
    align-items: center;
    gap: var(--size-2);
    font-family: var(--font-industrial);
    text-transform: uppercase;

    &::before {
      content: counter(link-count, decimal-leading-zero);
      font-weight: var(--font-weight-9);
    }

    &:hover,
    &:focus-visible {
      color: var(--brand);
    }
  }

  @container (max-width: 640px) {
    body.stop-scrolling {
      overflow: hidden;
    }

    .menu-opener,
    .menu-closer {
      background-color: transparent;
      padding: 0;
      border: 0;
    }

    .menu-opener {
      display: block;
    }

    .menu-opener[aria-expanded='true'] {
      display: none;
    }

    .overlay[aria-expanded='true'] {
      display: block;

      position: fixed;
      inset: 0;
      z-index: var(--layer-4);

      height: 100dvh;
      background-color: hsla(0, 0%, 0%, 0.4);
    }

    nav {
      display: none;
    }

    nav.active {
      display: flex;
      flex-direction: column;
      gap: var(--size-11);

      position: fixed;
      inset: 0 0 0 30%;
      z-index: var(--layer-5);

      background-color: var(--surface-1);
      height: 100dvh;
      padding: var(--size-4) var(--size-3);
    }

    .menu-closer[aria-expanded='true'] {
      display: block;
      align-self: self-end;
    }

    nav.active .menu {
      display: grid;
      gap: var(--size-5);

      & a {
        font-size: var(--font-size-3);
      }
    }
  }
</style>
